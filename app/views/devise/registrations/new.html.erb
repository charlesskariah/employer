

<div class="container-fluid">
    <div class = "row margin-bottom">
      <div class = "col-md-4"></div>
      <div class = "col-md-2"><h2>Sign-Up</h2></div>
      <div class = "col-md-3 "><h2><%= link_to "Forgot password?", new_password_path(resource_name), :class => "btn btn-success btn-xs forgot" %></h2></div>
      <div class = "col-md-1"></div>
    </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class = "row margin-bottom">
      <div class = "col-md-4"></div>
      <div class = "col-md-7">  <%= devise_error_messages! %></div>
      <div class = "col-md-1"></div>
    </div>

    <div class = "row margin-bottom">
      <div class = "col-md-4"></div>
      <div class = "col-md-2"><%= f.label :name %></div>
      <div class = "col-md-3"><%= f.text_field :name, autofocus: true, :placeholder => "Name",:class => "form-control" %></div>
      <div class = "col-md-4"></div>
    </div>
    <div class = "row margin-bottom">
      <div class = "col-md-4"></div>
      <div class = "col-md-2"><%= f.label :email %></div>
      <div class = "col-md-3"><%= f.email_field :email, :class => "form-control", :placeholder => "Email"%></div>
      <div class = "col-md-4"></div>
    </div>
    <div class = "row margin-bottom">
      <div class = "col-md-4"></div>
      <div class = "col-md-2"><%= f.label :location %></div>
      <div class = "col-md-3"><%= f.text_field :location, :class => "form-control", :placeholder => "Your Location"%></div>
     <div class = "col-md-4"></div>
    </div>
    
    <div class = "row margin-bottom">
      <div class = "col-md-4"></div>
      <div class = "col-md-2"><%= f.label :date_of_birth %></div>
      <div class = "col-md-3"><%= f.date_field :date_of_birth, :class => "form-control"%></div>
      <div class = "col-md-4"></div>
    </div>
    <div class = "row margin-bottom">
      <div class = "col-md-4"></div>
      <div class = "col-md-2"><%= f.label :gender %></div>
      <div class = "col-md-3"><%= f.select(:gender,{}, {:class => "form-control"}) do %>
        <% [['Male'], ['Female']].each do |c| -%>
          <%= content_tag(:option, c.first, value: c.first, class: "form-control") %>
        <% end %>
      <% end %></div>
      <div class = "col-md-4"></div>
    </div>
    <div class = "row margin-bottom">
      <div class = "col-md-4"></div>
      <div class = "col-md-2"><%= f.label :phone_number %></div>
      <div class = "col-md-1"><%= f.select(:country_code, {:class => "form-control"}) do %>
        <% [['India', "+91"], ['USA', "+1"], ["AFG", "+93"], ["Brazil", "+55"]].each do |c| -%>
          <%= content_tag(:option, c.first, value: c.last) %>
        <% end %>
      <% end %></div>
      <div class= "col-md-2"><%= f.number_field :phone_number, :class => "form-control", :placeholder => "9562141230"%></div>
      <div class = "col-md-4"></div>
    </div>
    <div class = "row margin-bottom">
      <div class = "col-md-4"></div>
      <div class = "col-md-2"><%= f.label :passsword %></div>
      <div class = "col-md-3">
        <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Password" %><br />
          <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
      </div>
      <div class = "col-md-4"></div>
    </div>
    <div class = "row margin-bottom">
      <div class = "col-md-4"></div>
      <div class = "col-md-2"><%= f.label :password_confirmation %></div>
      <div class = "col-md-3"><%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder => "Confirm Password" %></div>
      <div class = "col-md-4"></div>
    </div>
    <div class = "row margin-bottom">
      <div class = "col-md-4"></div>
      <div class = "col-md-2"></div>
      <div class = "col-md-2"><%= f.submit "Sign-Up", :class => "btn btn-primary" %></div>
      <div class = "col-md-4"></div>
    </div>
  <%end%>
</div>